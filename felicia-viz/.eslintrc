{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "legacyDecorators": true
    }
  },
  "plugins": ["react"],
  "extends": ["airbnb", "prettier", "prettier/react"],
  "rules": {
    "react/jsx-filename-extension": ["error", { "extensions": [".js", ".jsx"] }],
    "no-underscore-dangle": "off",
    "import/no-unresolved": ["error", {"ignore": ["felicia_js.node"]}]
  },
  "globals": {
    "document": "readonly",
    "HEARTBEAT_INTERVAL": "readonly",
    "HTTP_PORT": "readonly",
    "Image": "readonly",
    "ResizeObserver": "readonly",
    "SERVER_ADDRESS": "readonly",
    "WebSocket": "readonly",
    "WEBSOCKET_PORT": "readonly",
    "window": "readonly"
  },
  "settings": {
    "import/resolver": {
      "node": {
        "paths": [".", "frontend/src"],
      }
    }

  }
}
