{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "legacyDecorators": true
    }
  },
  "plugins": ["react"],
  "extends": ["airbnb", "prettier", "prettier/react"],
  "rules": {
    "import/no-unresolved": ["error", {"ignore": ["felicia_js.node", "@felicia-viz/ui", "@felicia-viz/communication"]}],
    "no-bitwise": "off",
    "no-console": "off",
    "no-underscore-dangle": "off",
    "react/forbid-prop-types": ["error", {"forbid": ["any", "array"]}],
    "react/jsx-filename-extension": ["error", { "extensions": [".js", ".jsx"] }]
  },
  "globals": {
    "document": "readonly",
    "FELICIA_ROOT": "readonly",
    "HEARTBEAT_INTERVAL": "readonly",
    "HTTP_PORT": "readonly",
    "Image": "readonly",
    "SERVER_ADDRESS": "readonly",
    "WebSocket": "readonly",
    "WEBSOCKET_PORT": "readonly",
    "window": "readonly"
  },
  "settings": {
    "import/resolver": {
      "node": {
        "paths": [".", "frontend/src", "backend/src"]
      }
    }

  }
}
